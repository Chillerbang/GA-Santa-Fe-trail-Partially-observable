<Window x:Class="SantaFeTrail.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SantaFeTrail"
        mc:Ignorable="d"
        Title="Santa Fe Trail" Height="650" Width="900">

    <Grid  Background="Black">
        <StackPanel HorizontalAlignment="Left" Height="520" Margin="40,55,0,0" VerticalAlignment="Top" Width="250">
            <Button x:Name="btnStart" Content="Start Generation " Height="50" Click="Start"/>

            <Label  Foreground="White" Content="Log:"/>
            <TextBox x:Name="tbLog" Text="" TextWrapping="Wrap" Height="434" Background="#FFC0CEC1" ScrollViewer.HorizontalScrollBarVisibility="Auto"
         ScrollViewer.VerticalScrollBarVisibility="Auto"
         ScrollViewer.CanContentScroll="True"/>
        </StackPanel>
        <Canvas x:Name="pnlDisplay"  Height="520" Width="520" Background="SlateGray"  VerticalAlignment="Top" Margin="320,55,53.333,0"/>

    </Grid>
</Window>
